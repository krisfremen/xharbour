
# makefile for Borland C/C++ 32 bits
# Building of libhbpg.lib - Harbour API to postgres

INCLUDE_DIR = ..\..\include
INCLUDE_PQ = \postgresql-7.4.1\src\interfaces\libpq;\postgresql-7.4.1\src\include;\postgresql-7.4.1\src\include\port\win32

BIN_DIR = ..\..\bin\b32
OBJ_DIR = ..\..\obj\b32
LIB_DIR = ..\..\lib\b32

$(LIB_DIR)\libhbpg.lib : \
  $(OBJ_DIR)\TPostgres.obj \
  $(OBJ_DIR)\postgres.obj

$(OBJ_DIR)\TPostgres.c    : TPostgres.prg
$(OBJ_DIR)\TPostgres.obj  : $(OBJ_DIR)\TPostgres.c
$(OBJ_DIR)\postgres.obj   : postgres.c

.c.obj:
  bcc32 $(CLIBFLAGS) -c -O2 -I$(INCLUDE_DIR) -I$(INCLUDE_PQ) -DHB_OS_WIN_32_USED -o$@ $<
  tlib $(LIB_DIR)\libhbpg.lib -+$@,,

.prg.c:
  $(BIN_DIR)\harbour.exe $< -q0 -a -w -es2 -gc0 -n -i$(INCLUDE_DIR) -o$@

