!if ( "$(MK_FLAGS:Y=)"=="A" )

all: \
   CLEAN \
   $(WHAT32LIB)

MK_FLAGS = $(MK_FLAGS:A=)

!else

all: \
   $(WHAT32LIB)

!endif

CLEAN:
   -@if exist $(LIB_DIR)\*.lib $(DEL) $(LIB_DIR)\*.lib > nul
   -@if exist $(OBJ_DIR)\*.obj $(DEL) $(OBJ_DIR)\*.obj > nul
   -@if exist $(OBJ_DIR)\*.c $(DEL) $(OBJ_DIR)\*.c > nul
   -@if exist $(OBJ_DIR)\*.h $(DEL) $(OBJ_DIR)\*.h > nul

$(WHAT32LIB) : $(WHAT32OBJ)
   lib /out:$@ $**
