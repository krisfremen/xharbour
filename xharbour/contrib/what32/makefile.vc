# Makefile : Builds What32 for msvc in non batch mode

# Global paths
#
HBR_DIR =..\..
WH_DIR  =.
OBJ_DIR =obj\vc
LIB_DIR  =lib\vc
OUTDIR  =build
SRCDIR  =source


!ifndef ECHO
# don't indent definitions
ECHO = echo.
!endif
!ifndef DEL
# You might need to set 'ECHO=echo.' - but don't set 'DEL=del.' !!!
DEL = del
!endif

MK_FILE  = makefile.vc
MK_FLAGS = $(MAKEFLAGS: =)

#-- HARBOUR COMPILER ----
hbc      =$(HBR_DIR)\BIN\harbour
hbcflags =-n -w -es2 -q0 -i$(WH_DIR)\include;$(HBR_DIR)\include

#-- C COMPILER ----------
CC       =cl
CFLAGS   =-TP -W3 -Ox -GA -nologo -c -DHB_API_MACROS -DHB_OS_WIN_32 -DHB_FM_STATISTICS_OFF -I$(WH_DIR)\include -I$(HBR_DIR)\include

#-- RESOURCE COMPILER ---
rc       =rc
rcflags  =-r

.SUFFIXES: .prg .lib

.c.obj:
 $(CC) $(CFLAGS) -Fo$(OBJ_DIR)\ $<

WHAT32LIB= $(LIB_DIR)\what32.lib

LIBLIST  = $(WHAT32LIB)

# library
#

{$(OBJ_DIR)}.c{$(OBJ_DIR)}.obj:
   $(CC) $(CFLAGS) -Fo$(OBJ_DIR)\ $<

{$(SRCDIR)}.c{$(OBJ_DIR)}.obj:
   $(CC) $(CFLAGS) -Fo$(OBJ_DIR)\ $<

{$(SRCDIR)}.prg{$(OBJ_DIR)}.obj:
   $(hbc) $(hbcflags) -o$(OBJ_DIR)\ $<
   $(CC) $(CFLAGS) -Fo$(OBJ_DIR)\ $*.c

